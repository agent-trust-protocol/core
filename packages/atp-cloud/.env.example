# ATP Cloud Environment Variables
# ⚠️  INTERNAL TESTING ONLY - NOT FOR PRODUCTION USE

# Application Environment
NODE_ENV=development

# Service Ports
CLOUD_GATEWAY_PORT=3010
TENANT_SERVICE_PORT=3011
ANALYTICS_SERVICE_PORT=3012
DASHBOARD_PORT=3013

# ATP Core Services
ATP_IDENTITY_SERVICE_URL=http://localhost:3001
ATP_CREDENTIALS_SERVICE_URL=http://localhost:3002
ATP_PERMISSIONS_SERVICE_URL=http://localhost:3003
ATP_AUDIT_SERVICE_URL=http://localhost:3006
ATP_MONITORING_SERVICE_URL=http://localhost:3007

# Database Configuration
MONGODB_URL=mongodb://localhost:27017
MONGODB_DATABASE=atp_cloud
REDIS_URL=redis://localhost:6379
REDIS_KEY_PREFIX=atp:cloud:

# Authentication
JWT_SECRET=your-jwt-secret-here-change-in-production
API_KEY_PREFIX=atp_

# Billing (Optional - for Stripe integration)
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=

# Rate Limiting
DEFAULT_RATE_LIMIT_REQUESTS=1000
DEFAULT_RATE_LIMIT_WINDOW=3600

# System Limits
MAX_TENANTS=1000
MAX_API_KEYS_PER_TENANT=10

# Logging
LOG_LEVEL=debug

# Dashboard Configuration
NEXT_PUBLIC_API_URL=http://localhost:3010
NEXT_PUBLIC_TENANT_API_URL=http://localhost:3011
NEXT_PUBLIC_ANALYTICS_API_URL=http://localhost:3012

# Development Features
ENABLE_DEBUG_ROUTES=true
ENABLE_MOCK_SERVICES=false