FROM node:18-alpine

# Install curl for healthcheck
RUN apk add --no-cache curl

# Create app directory
WORKDIR /app

# Copy package files
COPY package*.json ./

# Install dependencies
RUN npm install --production

# Copy application files
COPY quantum-safe-base-server.js ./
COPY quantum-safe-server-standalone-v2.js ./
COPY quantum-crypto-utils.js ./
COPY claude-atp-client-v2.js ./
COPY test-quantum-safe-integration.js ./

# Create logs directory
RUN mkdir -p /app/logs

# Expose port
EXPOSE 3009

# Start the demo server
CMD ["node", "quantum-safe-server-standalone-v2.js"]