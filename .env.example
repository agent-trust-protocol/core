# üõ°Ô∏è Agent Trust Protocol‚Ñ¢ - Environment Configuration
# Copy this file to .env and customize for your deployment

# =============================================================================
# QUANTUM-SAFE SERVER CONFIGURATION
# =============================================================================

# Server Configuration
ATP_PORT=3008
ATP_HOST=127.0.0.1
NODE_ENV=production

# Quantum-Safe Security Settings
ATP_QUANTUM_SAFE=true
ATP_CRYPTOGRAPHY_MODE=hybrid
ATP_SIGNATURE_ALGORITHM=ed25519+dilithium

# Trust Level Configuration
ATP_TRUST_LEVELS=basic,verified,enterprise
ATP_DEFAULT_TRUST_LEVEL=basic

# Rate Limiting
ATP_RATE_LIMIT_ENABLED=true
ATP_RATE_LIMIT_BASIC=60
ATP_RATE_LIMIT_VERIFIED=120
ATP_RATE_LIMIT_ENTERPRISE=300

# Logging Configuration
ATP_LOG_LEVEL=info
ATP_LOG_FORMAT=json
ATP_LOG_FILE=/app/logs/atp-server.log

# Health Check Configuration
ATP_HEALTH_CHECK_ENABLED=true
ATP_HEALTH_CHECK_INTERVAL=30000

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# PostgreSQL Database
DATABASE_URL=postgresql://atp_user:CHANGE_IN_PRODUCTION@postgres:5432/atp_production
DB_POOL_MIN=2
DB_POOL_MAX=10

# Redis Configuration (Optional)
REDIS_URL=redis://redis:6379
REDIS_PASSWORD=CHANGE_IN_PRODUCTION

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# JWT Configuration
JWT_SECRET=CHANGE_THIS_SECRET_IN_PRODUCTION_MINIMUM_32_CHARACTERS
JWT_EXPIRY=24h

# API Keys (Generate secure random keys)
ATP_API_KEY=atp_live_CHANGE_THIS_API_KEY_IN_PRODUCTION
ATP_WEBHOOK_SECRET=whsec_CHANGE_THIS_WEBHOOK_SECRET_IN_PRODUCTION

# Encryption Keys (Generate with: openssl rand -base64 32)
ATP_ENCRYPTION_KEY=CHANGE_THIS_ENCRYPTION_KEY_IN_PRODUCTION_BASE64
ATP_SIGNING_KEY=CHANGE_THIS_SIGNING_KEY_IN_PRODUCTION_BASE64

# =============================================================================
# ENTERPRISE FEATURES
# =============================================================================

# Enterprise License
ATP_LICENSE_KEY=enterprise_license_key_here
ATP_ENTERPRISE_FEATURES=true

# Compliance and Auditing
ATP_AUDIT_ENABLED=true
ATP_COMPLIANCE_MODE=soc2
ATP_RETENTION_DAYS=2555  # 7 years for compliance

# Monitoring and Observability
ATP_METRICS_ENABLED=true
ATP_TRACING_ENABLED=true
ATP_PROMETHEUS_PORT=9090

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================

# IPFS Configuration
IPFS_URL=http://ipfs:5001
IPFS_GATEWAY=http://ipfs:8080

# Email Configuration (for notifications)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=notifications@atp.dev
SMTP_PASSWORD=CHANGE_IN_PRODUCTION
SMTP_FROM=Agent Trust Protocol <notifications@atp.dev>

# =============================================================================
# DEPLOYMENT CONFIGURATION
# =============================================================================

# Domain Configuration
DOMAIN=atp.dev
SUBDOMAIN=api
FULL_DOMAIN=api.atp.dev

# SSL/TLS Configuration
SSL_ENABLED=true
SSL_CERT_PATH=/etc/ssl/certs/atp.crt
SSL_KEY_PATH=/etc/ssl/private/atp.key

# Load Balancer Configuration
LOAD_BALANCER_ENABLED=true
LOAD_BALANCER_ALGORITHM=round_robin

# =============================================================================
# DEVELOPMENT CONFIGURATION (Remove in production)
# =============================================================================

# Development Settings
DEBUG=false
DEVELOPMENT_MODE=false
MOCK_QUANTUM_SAFE=false

# Testing Configuration
TEST_DATABASE_URL=postgresql://atp_test:test_password@postgres:5432/atp_test
TEST_REDIS_URL=redis://redis:6379/1

# =============================================================================
# MONITORING AND ALERTING
# =============================================================================

# Grafana Configuration
GRAFANA_PASSWORD=CHANGE_IN_PRODUCTION
GRAFANA_ADMIN_USER=admin

# Prometheus Configuration
PROMETHEUS_RETENTION=15d
PROMETHEUS_SCRAPE_INTERVAL=15s

# Alert Manager
ALERTMANAGER_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
ALERTMANAGER_EMAIL=alerts@atp.dev

# =============================================================================
# BACKUP AND DISASTER RECOVERY
# =============================================================================

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=atp-backups-production
BACKUP_S3_REGION=us-east-1

# AWS Configuration (for backups)
AWS_ACCESS_KEY_ID=CHANGE_IN_PRODUCTION
AWS_SECRET_ACCESS_KEY=CHANGE_IN_PRODUCTION
AWS_REGION=us-east-1