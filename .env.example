# Development Environment Configuration
NODE_ENV=development
ATP_PORT=3008
ATP_HOST=127.0.0.1

# Database Configuration
DATABASE_URL=postgresql://atp_user:dev_password@localhost:5432/atp_development
POSTGRES_DB=atp_development
POSTGRES_USER=atp_user
POSTGRES_PASSWORD=dev_password

# JWT Configuration
JWT_SECRET=development_jwt_secret_minimum_32_characters_long

# Service Ports
IDENTITY_SERVICE_PORT=3001
VC_SERVICE_PORT=3002
PERMISSION_SERVICE_PORT=3003
AUDIT_LOGGER_PORT=3004
RPC_GATEWAY_PORT=3005
QUANTUM_SAFE_PORT=3008

# Logging
LOG_LEVEL=debug
ATP_LOG_LEVEL=debug

# CORS
CORS_ORIGIN=http://localhost:3000

# Encryption
SERVICE_ENCRYPTION_KEY=development_encryption_key_32_chars

# Health Check
HEALTH_CHECK_INTERVAL=30s
HEALTH_CHECK_TIMEOUT=10s
HEALTH_CHECK_RETRIES=3

# IPFS
IPFS_URL=http://localhost:5001